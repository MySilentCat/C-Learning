{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang.exe 生成活动文件",
            "command": "D:\\LLVM\\bin\\clang.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "-D_CRT_SECURE_NO_WARNINGS",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "shell",
        	"label": "cmake", 
        	"command": "cmake", 
        	"args": [
                "-G",
                "Unix Makefiles",
        	    ".."
        	]
        },
        {
            "label": "make", 
            "group": {
                "kind": "build", 
                "isDefault": true
            },
            "command": "make",
            "args": [
                
            ]
        },
        {
            "label": "CMake Build",
            "dependsOn":[ 
                "cmake", 
                "make"
            ]
        }
    ],
    "options": {
        "cwd": "${fileDirname}/build"
    },
    "version": "2.0.0"
}